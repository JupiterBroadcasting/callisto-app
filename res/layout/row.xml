<!-- This is a row that is used for various ListViews -->
<!-- It contains many extra views that can be hidden. -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
        >

    <!-- android:progressDrawable="@drawable/progress_bg" -->
    <ProgressBar
            android:id="@+id/progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:progressDrawable="@drawable/progress_bg"
            android:minHeight="30dp"
            android:layout_width="fill_parent"
            android:progress="50"
            android:background="#ff000000"
            android:layout_height="fill_parent" />


<LinearLayout
    android:id="@+id/row"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/transparent"
    android:cacheColorHint="@android:color/transparent"
    android:orientation="horizontal" >

    <ImageView
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:id="@+id/smallImg"
            android:src="@drawable/ic_action_signal"
            android:background="@android:color/transparent"
            android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/linearLayout1337"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/hiddenId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />
        <TextView
            android:id="@+id/rowTextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1.0"
            android:ellipsize="end"
            android:paddingBottom="1dp"
            android:paddingTop="10dp"
            android:singleLine="true"
            android:text="Row"
            android:textColor="@color/txtClr"
            android:textSize="16sp" />

        <!-- Main text (e.g. Episode title) -->

        <!-- Sub text (e.g. Episode date, show, etc) -->
        <TextView
            android:id="@+id/rowSubTextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1.0"
            android:paddingBottom="10dp"
            android:paddingTop="1dp"
            android:text="Subrow"
            android:textColor="@color/txtClr"
            android:textSize="13sp" />
    </LinearLayout>

    <!-- Right text (e.g. time) -->
    <TextView
        android:id="@+id/rightTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="00:00"
        android:textColor="@color/txtClr"
        android:textSize="12sp" />

    <!-- Seen/unseen -->
    <CheckBox
        android:id="@+id/img"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:button="@drawable/is_new"
        android:checked="true"
        android:clickable="true"
        android:focusable="false" />

    <ImageView
        android:id="@+id/grabber"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:padding="2dp"
        android:src="@drawable/ic_action_drag" />

    <ImageButton
        android:id="@+id/moveUp"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:padding="2dp"
        android:src="@drawable/expander_ic_maximized" />

    <ImageButton
        android:id="@+id/moveDown"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:padding="2dp"
        android:src="@drawable/expander_ic_minimized" />

    <ImageButton
        android:id="@+id/remove"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:padding="2dp"
        android:src="@drawable/ic_action_cancel" />

</LinearLayout>

</RelativeLayout>
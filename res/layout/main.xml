<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainMenu"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="10dp" >

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:padding="10dp" >

        <Button
            android:id="@+id/listen"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:drawablePadding="-30dp"
            android:drawableTop="@drawable/ic_menu_play_clip"
            android:paddingTop="30dp"
            android:text="Listen"
            android:textColor="@android:color/primary_text_light"
            android:textSize="30sp" />

        <Button
            android:id="@+id/watch"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:drawableTop="@drawable/ic_menu_view"
            android:paddingTop="30dp"
            android:drawablePadding="-30dp"
            android:text="Watch"
            android:textColor="@android:color/primary_text_light"
            android:textSize="30sp"
            android:visibility="visible" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:padding="10dp"
        android:visibility="visible" >

        <Button
            android:id="@+id/plan"
            style="@drawable/btn_default"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:drawableTop="@drawable/ic_menu_today"
            android:paddingTop="30dp"
            android:drawablePadding="-30dp"
            android:text="Plan"
            android:textColor="@android:color/primary_text_light"
            android:textSize="30sp"
            android:visibility="visible" />

        <Button
            android:id="@+id/chat"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:drawableTop="@drawable/ic_menu_allfriends"
            android:paddingTop="30dp"
            android:drawablePadding="-30dp"
            android:text="Chat"
            android:textColor="@android:color/primary_text_light"
            android:textSize="30sp"
            android:visibility="visible" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:padding="10dp"
        android:visibility="visible" >

        <Button
            android:id="@+id/contact"
            style="@drawable/btn_default"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:drawablePadding="-30dp"
            android:drawableTop="@drawable/ic_menu_send"
            android:paddingTop="30dp"
            android:text="Contact"
            android:textColor="@android:color/primary_text_light"
            android:textSize="30sp"
            android:visibility="visible" />

        <Button
            android:id="@+id/donate"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:drawablePadding="-30dp"
            android:drawableTop="@drawable/ic_menu_emoticons"
            android:paddingTop="30dp"
            android:text="Donate"
            android:textColor="@android:color/primary_text_light"
            android:textSize="30sp"
            android:visibility="visible" />

    </TableRow>

</TableLayout>
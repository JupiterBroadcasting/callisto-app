<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    android:title="Preferences"
    <EditTextPreference
        android:title="Storage path" 
        android:dialogMessage="Input the path you want files to be stored in" 
        android:positiveButtonText="Confirm" 
        android:negativeButtonText="Cancel" 
        android:dialogTitle="Storage Path" 
        android:key="storage_path"
        android:defaultValue="callisto" />
	    <ListPreference 
	        android:title="Live quality"
	        android:key="live_url"
            android:entries="@array/live_quality"
            android:entryValues="@array/live_sources"
            android:defaultValue="http://jbradio.out.airtime.pro:8000/jbradio_b"
	        />
	    <CheckBoxPreference 
	        android:key="completion_delete"
	        android:title="Delete upon completion"
	        />
	    <CheckBoxPreference 
	        android:key="download_to_queue"
	        android:title="Append downloads to queue"
	        />
        <CheckBoxPreference
            android:key="skip_inactive"
            android:title="'Update All' skips inactive"
            />
	    
	    <PreferenceScreen android:title="IRC Settings" android:key="irc_settings">
	        <EditTextPreference android:title="Nickname" android:key="irc_nick" android:summary="Your nickname!"/>
	        <EditTextPreference android:title="Password" android:key="irc_pass" android:summary="Optional - If your nick is registered with NickServ"/>
	        <EditTextPreference android:title="Quit msg" android:key="irc_quit" android:summary="Optional - Message to be shown when you leave"/>
	        <CheckBoxPreference android:key="irc_time" android:title="Show timestamps"/>
            <CheckBoxPreference android:key="irc_modes" android:title="Show modes" android:summary="Prepends symbols for OPs and such"/>
	        <EditTextPreference android:key="irc_max_scrollback" android:numeric="integer" android:title="Max scrollback" android:summary="Maximum number of lines to display" android:defaultValue="500"/>
            <CheckBoxPreference android:key="irc_vibrate" android:title="Vibrate on mention" android:summary="When you receive an unread mention." android:defaultValue="true"/>
            <CheckBoxPreference android:key="irc_vibrate_all" android:title="Vibrate on EVERY mention" android:summary="When anyone mentions you at all"/>
            <CheckBoxPreference android:key="irc_emoticons" android:title="Use Emoticons" android:summary="May slow performance, bu shiny"/>
	        
	        <PreferenceCategory android:title="Colors">
	            <CheckBoxPreference android:key="irc_irssi" android:title="irssi mode" android:summary="Simple green-on-black, no nick colors." android:disableDependentsState="true"/>
	            <CheckBoxPreference android:key="nick_colors" android:title="Random nick colors" android:defaultValue="true" android:summary="Generate a random color for each nick." android:disableDependentsState="true" android:dependency="irc_irssi"/>
	            <net.margaritov.preference.colorpicker.ColorPickerPreference
	            	android:key="irc_color_etcnick" android:title="Other nick color" android:defaultValue="#2E8B91"  alphaSlider="false" android:dependency="nick_colors"/>
				
		        <net.margaritov.preference.colorpicker.ColorPickerPreference
				    android:key="irc_color_text" android:title="Text Color" android:defaultValue="#000000"  alphaSlider="false" android:dependency="irc_irssi"/>
		        <net.margaritov.preference.colorpicker.ColorPickerPreference
				    android:key="irc_color_back" android:title="Background Color" android:defaultValue="#FFFFFF"  alphaSlider="false" android:dependency="irc_irssi"/>
		        <net.margaritov.preference.colorpicker.ColorPickerPreference
				    android:key="irc_color_topic" android:title="Topic Color" android:defaultValue="#B8860B"  alphaSlider="false" android:dependency="irc_irssi"/>
		        <net.margaritov.preference.colorpicker.ColorPickerPreference
		        	android:key="irc_color_mynick" android:title="Your Nick Color" android:defaultValue="#2E8B57"  alphaSlider="false" android:dependency="irc_irssi"/>
		        <net.margaritov.preference.colorpicker.ColorPickerPreference
		        	android:key="irc_color_me" android:title="/me Color" android:defaultValue="#9400D3"  alphaSlider="false" android:dependency="irc_irssi"/>
		        <net.margaritov.preference.colorpicker.ColorPickerPreference
		        	android:key="irc_color_links" android:title="URL Color" android:defaultValue="#0000EE"  alphaSlider="false" android:dependency="irc_irssi"/>
		        <net.margaritov.preference.colorpicker.ColorPickerPreference
		        	android:key="irc_color_pm" android:title="PM Color" android:defaultValue="#008B8B"  alphaSlider="false" android:dependency="irc_irssi"/>
		        <net.margaritov.preference.colorpicker.ColorPickerPreference
		        	android:key="irc_color_join" android:title="Join Color" android:defaultValue="#0000FF"  alphaSlider="false" android:dependency="irc_irssi"/>
		        <net.margaritov.preference.colorpicker.ColorPickerPreference
		        	android:key="irc_color_nick" android:title="Nick Change Color" android:defaultValue="#0000FF"  alphaSlider="false" android:dependency="irc_irssi"/>
		        <net.margaritov.preference.colorpicker.ColorPickerPreference
		        	android:key="irc_color_part" android:title="Part Color" android:defaultValue="#0000FF"  alphaSlider="false" android:dependency="irc_irssi"/>
		        <net.margaritov.preference.colorpicker.ColorPickerPreference
		        	android:key="irc_color_quit" android:title="Quit Color" android:defaultValue="#0000FF"  alphaSlider="false" android:dependency="irc_irssi"/>
		        <net.margaritov.preference.colorpicker.ColorPickerPreference
		        	android:key="irc_color_kick" android:title="Kick Color" android:defaultValue="#0000FF"  alphaSlider="false" android:dependency="irc_irssi"/>
		        <net.margaritov.preference.colorpicker.ColorPickerPreference
		        	android:key="irc_color_mention" android:title="Mention Color" android:defaultValue="#F08080"  alphaSlider="false" android:dependency="irc_irssi"/>
		        <net.margaritov.preference.colorpicker.ColorPickerPreference
		        	android:key="irc_color_error" android:title="Error Color" android:defaultValue="#800000"  alphaSlider="false" android:dependency="irc_irssi"/>
		        <Preference 
		            android:title="Reset colors" android:key="reset_colors"/>
	        </PreferenceCategory>
	    </PreferenceScreen><PreferenceCategory
	        android:title="Super special settings"
	        android:key="secret" >
	        <CheckBoxPreference
	            android:key="splash_show"
	            android:summary="The wonderful feature that you got for donating to Qweex!"
	            android:title="@string/show_splash" 
	            android:defaultValue="true" />
	        <CheckBoxPreference
	            android:key="splash_quote"
	            android:summary="Toggle the quote when starting the app"
	            android:title="@string/splash_quote" 
	            android:defaultValue="true"
	            android:dependency="splash_show"
	             />
	    </PreferenceCategory>
	    
	    
	    
    
</PreferenceScreen>
